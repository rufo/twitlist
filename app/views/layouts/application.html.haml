!!!
%html
  %head
    %title Twitlist

    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

%body
  #user_nav
    - if current_user
      Welcome, #{current_user.name}!
    - else
      = link_to "Sign in with Twitter", "/auth/twitter"
  = yield
